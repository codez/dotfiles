[user]
	name = Pascal Zumkehr
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	co = checkout
  lol = log --graph --decorate --pretty='%h%x09%an%x09%ad  %s' --date=format:'%d.%m.%Y %H:%M' --abbrev-commit
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	#autocrlf = input
[apply]
	whitespace = nowarn
[format]
	#pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[push]
	default = current
